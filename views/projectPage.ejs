<!-- comment panel -->
<div class="row bootstrap snippets center" style="padding-top:7%;display: inline-block;">
        <div>
            <div class="comment-wrapper">
                <div class="panel panel-info">
                    <div class="panel-heading">
                    </div>
                    <div class="panel-body">
                        <form action="/projects/<%= project._id %>/comments" method="POST">
                            <textarea class="form-control" placeholder="Add a comment to <%= project.name %>" rows="3" name="commentText"></textarea>
                            <br>
                            <button>Submit</button>
                            <div class="clearfix">
                        </form>
                        
                        </div>
                        <hr>
                        <ul class="media-list">

                        <% project.comments.forEach((comment) => { %>
                        
                            <li class="media">
                                <a href="#" class="pull-left">
                                    <img src="https://bootdey.com/img/Content/user_1.jpg" alt="" class="img-circle">
                                </a>
                                <div class="media-body">
                                    <span class="text-muted pull-right">
                                        <small class="text-muted"><%= comment.timePosted %></small>
                                    </span>
                                    <strong class="text-success">@<%= comment.author %></strong>
                                    <p>
                                        <%= comment.text %> </a>.
                                    </p>
                                </div>
                            </li>
                        
                        <% }); %>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </div>


